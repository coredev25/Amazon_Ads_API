# Amazon PPC AI Dashboard Configuration
# Copy this file to .env and update with your values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=amazon_ads
DB_USER=postgres
DB_PASSWORD=your_password_here

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://138.197.212.121:3000,https://138.197.212.121:3000

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000

# =============================================================================
# AI ENGINE CONFIGURATION
# =============================================================================
# Default strategy settings
DEFAULT_ACOS_TARGET=0.09
DEFAULT_BID_CAP=4.52
DEFAULT_BID_FLOOR=0.02
DEFAULT_AI_MODE=human_review

# Enable/disable features
ENABLE_INTELLIGENCE_ENGINES=true
ENABLE_LEARNING_LOOP=true
ENABLE_ADVANCED_BID_OPTIMIZATION=true
ENABLE_WARM_UP_MODE=true

# =============================================================================
# SECURITY (for production)
# =============================================================================
# SECRET_KEY=your-secret-key-here
# JWT_ALGORITHM=HS256
# ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# OPTIONAL: AMAZON ADS API (for live sync)
# =============================================================================
# AMAZON_CLIENT_ID=your_client_id
# AMAZON_CLIENT_SECRET=your_client_secret
# AMAZON_REFRESH_TOKEN=your_refresh_token
# AMAZON_PROFILE_ID=your_profile_id
# AMAZON_REGION=NA

